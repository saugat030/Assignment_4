@model Employee


<h2>Edit Employee</h2>

<form asp-action="Edit" asp-controller="Department" method="post">
    <div class="form-group">
        <label asp-for="Id" class="form-label"></label>
        <input asp-for="Id" class="form-control" readonly /> <!-- Id editable hunu hudaina so readonly -->
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="form-label"></label>
        <input asp-for="DepartmentId" class="form-control" />
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

